<h1><%= @cocktail.name %></h1>
<% doses = Dose.all.select { |dose| (dose.cocktail_id == @cocktail.id) } %>
<ul>
  <% doses.each do |dose| %>
    <li><%= dose.ingredient.name %>: <%= dose.description %></li>
    <%= link_to 'remove ingredient', dose_path(dose), method: :delete, data: { confirm: 'Are you sure you want to delete this ingredient?' } %>
  <% end %>
  <div>
    <%= link_to 'Add an ingredient to this cocktail', (cocktail_path(@cocktail) + '/doses/new') %>
    <%= link_to 'Delete cocktail', @cocktail, method: :delete, data: { confirm: 'Are you sure you want to delete this cocktail?' } %>
    <%= link_to 'back to list', '/cocktails' %>
  </div>
</ul>
